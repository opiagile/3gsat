<mx:Canvas 
	xmlns:mx="http://www.adobe.com/2006/mxml" 
	width="420" 
	height="214" 
	backgroundColor="#0A0A0A" 
	themeColor="#FFFFFF" 
	backgroundDisabledColor="#000000"
	label="Cv_login" 
	backgroundAlpha="0.0">

	<mx:Image 
		source="img/Box.png" 
		height="165" 
		width="269" 
		horizontalCenter="69" 
		verticalCenter="-15"/>
	<mx:Panel 
		width="392" 
		height="196" 
		layout="absolute" 
		horizontalCenter="0" 
		verticalCenter="0" 
		title="S3G.BPLOG" 
		alpha="1.0" 
		borderColor="#517DB4" 
		color="#0B2033" 
		cornerRadius="8" 
		id="CvLogin" 
		themeColor="#7F7E7E" 
		titleIcon="@Embed(source='../img/IcoBPLOG.png')" 
		backgroundAlpha="0.48">
		<mx:Label 
			x="44" 
			y="31" 
			text="Usuário:" 
			width="66" 
			color="#494948" 
			textAlign="right" 
			id="LblUser"/>
		<mx:Label 
			x="44" 
			y="66" 
			text="Senha:" 
			width="66" 
			color="#494948" 
			textAlign="right" 
			id="LblSenha"/>
		<mx:TextInput 
			x="116" 
			y="28" 
			id="ImpLoginUser" 
			editable="true" 
			enabled="true" 
			toolTip="Digite seu Usuário" 
			width="214" 
			height="29"/>
		<mx:TextInput 
			x="116" 
			y="63" 
			displayAsPassword="true" 
			id="ImpLoginSenha" 
			color="#3F5B93" 
			themeColor="#3F5B93" 
			borderColor="#414141" 
			cornerRadius="4" 
			borderStyle="solid" 
			alpha="1.0"
			toolTip="Digite sua Senha" 
			width="214" 
			height="29" 
			fontSize="14"/>
		<mx:Button 
			x="211" 
			y="102" 
			label="Entrar" 
			id="BtnLogin" 
			color="#324255" 
			themeColor="#3F5B93" 
			width="119" 
			fontSize="10" 
			borderColor="#CED0D1"  
			height="33" 
			icon="@Embed(source='../img/Security_Card.png')" 
			fillAlphas="[1.0, 1.0, 1.0, 1.0]"/>
		<mx:Label 
			x="67" 
			y="69" 
			text="Label" 
			id="lbl_mensagem" 
			enabled="true" 
			color="#FF0000"
			visible="false"/>
	</mx:Panel>
</mx:Canvas>
